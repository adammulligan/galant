extends ../layout

block content
  .row
    .col-md-6
      form.form-horizontal(action='/book',method='post')
        input(type='hidden', name='_csrf', value=token)

        .form-group
          label.col-sm-3.control-label(for="title") Title
          .col-sm-8
            input.form-control(type="email",name="title",placeholder="The Inner Game of Tennis")

        .form-group
          label.col-sm-3.control-label(for="genre") Genre
          .col-sm-8
            input.form-control(type="text",name="genre",placeholder="Software Development, Fashion")

        .form-group
          label.col-sm-3.control-label(for="authors") Authors
          .col-sm-8
            input.form-control(type="text",name="authors",placeholder="Adam Mulligan, Tender Love")

        .form-group
          label.col-sm-3.control-label(for="book_file") Book File
          .col-sm-8
            input.form-control(type="file",name="book_file")

        .form-group
          .col-sm-offset-3.col-sm-8
            button.btn.btn-default(type="submit") Add
